<div class="container-fluid border-bottom">
  <!-- ヘッダーロゴ部分 -->
  <div class="">
    <%= link_to root_path do %>
      <h1>Game Value</h1>
    <% end %>
  </div>
  
  <!-- ヘッダーメニュー部分 -->
  <nav class="navbar navbar-expand-lg mt-1">
    <ul class="navbar-nav row justify-content-center">
      <!-- 会員ログイン時 -->
      <% if customer_signed_in? %>
        <div class="customer-menu btn-group" role="group" aira-label="Header menu">
          <%= link_to customer_path(current_customer.id), class:"nav-item btn" do %>
            <li>マイページ</li>
          <% end %>
          <%= link_to posts_path, class:"nav-item btn" do %>
            <li>投稿一覧</li>
          <% end %>
          <%= link_to new_post_path, class:"nav-item btn" do %>
            <li>新規投稿</li>
          <% end %>
          <%= link_to destroy_customer_session_path, method: :delete, class:"nav-item btn" do %>
            <li>ログアウト</li>
          <% end %>
        </div>
      <!-- 管理者ログイン時 -->
      <% elsif admin_signed_in? %>
        <div class="admin-menu btn-group" role="group" aira-label="Header menu">
          <%= link_to admins_posts_path, class:"nav-item text-white btn btn-secondary" do %>
            <li>投稿一覧</li>
          <% end %>
          <%= link_to admins_customer_index_path, class:"nav-item text-white btn btn-secondary" do %>
            <li>会員一覧</li>
          <% end %>
          <%= link_to admins_genres_path, class:"nav-item text-white btn btn-secondary" do %>
            <li>ジャンル一覧</li>
          <% end %>
          <%= link_to destroy_admin_session_path, method: :delete, class:"nav-item text-white btn btn-secondary" do %>
            <li>ログアウト</li>
          <% end %>
        </div>
    　<!-- 非ログイン時 -->
      <% else %>
        <div class="public-menu btn-group" role="group" aira-label="Header menu">
          <%= link_to about_path, class:"nav-item btn" do %>
            <li>About</li>
          <% end %>
          <%= link_to posts_path, class:"nav-item btn" do %>
            <li>投稿一覧</li>
          <% end %>
          <%= link_to new_customer_registration_path, method: :get, class:"nav-item btn" do %>
            <li>新規登録</li>
          <% end %>
          <%= link_to customer_session_path,method: :get, class:"nav-item btn" do %>
            <li>ログイン</li>
          <% end %>
        </div>
      <% end %>
    </ul>
  </nav>
</div>
