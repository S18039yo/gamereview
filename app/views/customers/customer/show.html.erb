<div class="container">
  <div class="row">
　  <div class="mx-auto my-4">
	  <h2 class="border border-dark p-3">マイページ</h2>
	</div>
  </div>
  
  <div class="row">
    <div class="col-4">
      <div class="mx-auto text-center">
        <h3 class="border border-dark p-3">会員情報</h3>
      </div>
      <table class="table table-bordered my-4">
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @customer.user_name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-outline-dark btn-lg btn-block" %>
    </div>
    
    <div class="col-8">
      <div class="m-auto text-center">
    　   <h3 class="border border-dark p-3">投稿一覧</h3>
  　   </div>
  　  
  　   <div>
  　     <% @posts.each do |post|%>
  　       <%= link_to post_path(post.id) do %>
  　         <%= post.name %>
  　       <% end %>
  　       <%= post.subject %>
  　       <%= post.genre.name %>
  　     <% end %>
  　   </div>
    </div>
  </div>
</div>
