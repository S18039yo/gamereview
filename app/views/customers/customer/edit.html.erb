<div class="container">
  <div class="row">
　  <div class="mx-auto my-4">
	  <h2 class="border border-dark p-3">会員情報編集</h2>
	</div>
  </div>
  
  <div class="row">
    <span class="mx-auto border border-dark p-3">
    <%= form_with model: @customer do |f| %>
      <div class="form-group my-auto">
        <%= f.label :"氏名" %>
        <div class="form-row">
          <div class="form-group col-6">
            <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %>
          </div>
          <div class="form-group col-6">
            <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
          </div>
        </div>
      </div>
          
      <div class="form-group my-auto">
        <%= f.label :"フリガナ" %>
        <div class="form-row">
          <div class="form-group col-6">
            <%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ" %>
          </div>
          <div class="form-group col-6">
            <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ" %>
          </div>
        </div>
      </div>
        
      <div class="form-group">
        <%= f.label :"ニックネーム (名前として表示されます)" %><br />
        <%= f.text_field :user_name, class: "form-control", placeholder: "ニックネーム" %>
      </div>
      
      <div class="form-group">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "example@example" %>
      </div>
      
      <div>
        <%= f.submit "編集内容を保存", class: "btn btn-outline-success btn-block" %>
        <%= link_to "戻る", customer_path(id: @customer.id), class: "btn btn-outline-primary btn-block" %>
        <%= link_to '退会する', unsubscribe_customer_index_path, class: "btn btn-outline-danger btn-block" %>
      </div>
    <% end %>
    </span>
  </div>
</div>
