<div class="container">
  <div class="row">
    <div class="mx-auto my-4">
      <h2 class="border border-dark p-3">新規会員登録</h2>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
        
        <div class="form-group my-auto">
          <%= f.label :"氏名" %>
          <div class="form-row">
            <div class="form-group col-6">
              <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %>
            </div>
            <div class="form-group col-6">
              <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
            </div>
          </div>
        </div>
          
        <div class="form-group my-auto">
          <%= f.label :"フリガナ" %>
          <div class="form-row">
            <div class="form-group col-6">
              <%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ" %>
            </div>
            <div class="form-group col-6">
              <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ" %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label :"ニックネーム (名前として表示されます)" %><br />
          <%= f.text_field :user_name, class: "form-control", placeholder: "ニックネーム" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "example@example" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
        </div>
      
        <div class="form-group">
          <%= f.label :"パスワード　(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      
        <div class="actions pt-3">
          <%= f.submit "登録する", class: "btn btn-outline-dark btn-block" %>
        </div>
      <% end %>
      <div class="text-center my-3">
        <%- if controller_name != 'sessions' %>
          <%= link_to "会員登録済の方はこちら", new_session_path(resource_name) %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>
