<div class="container">
  <div class="row">
    <div class="mx-auto my-4">
      <h2 class="border border-dark p-3">ログイン</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@example" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions pt-3 mb-3">
          <%= f.submit "ログイン", class: "btn btn-outline-dark btn-block" %>
        </div>
      <% end %>
      <div class="text-center my-3">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "新規登録はこちら", new_registration_path(resource_name) %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>