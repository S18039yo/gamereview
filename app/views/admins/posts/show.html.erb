<div class="container">
  <div class="row">
　  <div class="mx-auto my-4">
	  <h2 class="border border-dark p-3">管理者側投稿詳細</h2>
	</div>
  </div>
  
  <div class="row">
    <div class="col-8">
      <div class="row">
        <span class="mx-auto border border-dark p-3 w-100">
          <div>
            <h5>
              <strong><ゲームタイトル></strong>
            </h5>
            <h3>
              <%= @post.name %>
            </h3>
          </div>
          <div class="mt-4">
            <p>投稿者：<%= @customer.user_name %></p>
          </div>
          <div>
            <p>件名：<%= @post.subject %></p>
          </div>
          <div>
            <p>ジャンル：<%= @post.genre.name %></p>
          </div>
          <div>
            <h5>[レビュー文]</h5>
            <p>
              <%= @post.introduction %>
            </p>
          </div>
          <div class="row p-auto">
            <div class="col">
            <%= link_to "編集する", edit_admins_post_path(@post.id), class: "btn btn-outline-success btn-lg btn-block" %>
            </div>
            <div class="col">
            <%= link_to "一覧に戻る", admins_customer_path(@customer.id), class: "btn btn-outline-primary btn-lg btn-block" %>
            </div>
        　</div>
        </span>
      </div>
    </div>
    
    <div class="col-4">
      <div class="row">
        <span class="mx-auto border border-dark p-3">
          <p>コメント件数：<%= @post.post_comments.count %></p>
          <% @post.post_comments.each do |post_comment| %>
            <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            <%= post_comment.customer.user_name %><br />
            <%= post_comment.comment %><br />
          <% end %>
        </span>
      </div>
    </div>
  </div>
</div>
