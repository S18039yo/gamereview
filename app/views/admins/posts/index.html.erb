<div class="container">
  <div class="row">
　  <div class="mx-auto my-4">
	  <h2 class="border border-dark p-3">管理者側投稿一覧</h2>
	</div>
  </div>
  
  <div class="mx-auto my-4">
    <table class="table">
      <thead class="bg-light">
        <th class="text-center">投稿者</th>
        <th class="text-center">ゲームタイトル</th>
        <th class="text-center">件名</th>
        <th class="text-center">ゲームジャンル</th>
        <th class="text-center">ステータス</th>
      </thead>
      <tbody class="p-auto">
        <tr>
          <% @posts.each do |post| %>
            <tr>
              <td class="text-center">
                <%= post.customer.user_name %>
              </td>
              <td class="text-center">
                <%= link_to admins_post_path(post.id) do %>
                  <%= post.name %>
                <% end %>
              </td>
              <td class="text-center">
                <%= post.subject %>
              </td>
              <td class="text-center">
                <%= post.genre.name %>
              </td>
              <td class="text-center">
                <% if post.is_active == true %>
                  <p class="font-weight-bold text-success">公開中</p>
                <% else %>
                  <p class="font-weight-bold text-black-50">非公開</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
