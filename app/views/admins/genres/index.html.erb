<div class="container">
  
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="row">
    <span>ジャンル一覧・追加</span>
  </div>

  <div class="row">
    <%= form_with model: [:admins, @genre] do |f| %>
      <table>
        <td>
          <%= f.label "ジャンル名"%>
        </td>
        <td>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
        </td>
        <td>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </td>
      </table>
    <% end %>
  </div>

  <div class="row">
    <table class="table table-hover">
      <thead class="bg-light">
        <th class="text-center">ジャンル</th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
