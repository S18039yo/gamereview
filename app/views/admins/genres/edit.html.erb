<div class="container">
  
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="row my-3">
    <span class="rounded bg-light py-2 px-3 font-weight-bold">ジャンル編集</span>
  </div>
  
  <div class="row">  
    <%= form_with model: [:admin, @genre] do |f| %>
      <table class="col-12 mt-3 table table-borderless bg-light border rounded">
        <td>
          <%= f.label "ジャンル名", class: "mr-5" %>
        </td>
        <td>
          <%= f.text_field :name, class: "mr-5" %>
        </td>
      </table>
      <div class="text-right">
        <%= f.submit "変更を保存", class: "btn btn-success mr-3" %>
        <%= link_to "戻る", admin_genres_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
